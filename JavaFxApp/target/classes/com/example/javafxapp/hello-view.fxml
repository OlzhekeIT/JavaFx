<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javafxapp.HelloController">


    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #ff4b32;">
            <children>
                <Label text="K-Shop"
                       style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;"/>
                <TextField fx:id="searchField" promptText="Search product..."
                           style="-fx-background-radius: 20; -fx-padding: 4 12; -fx-pref-width: 300;"/>
            </children>
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
        </HBox>
    </top>


    <left>
        <VBox spacing="10" style="-fx-background-color: #f5f5f5;">
            <children>
                <Label text="Categories"
                       style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <ListView fx:id="categoryList" prefWidth="200"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </left>


    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <FlowPane fx:id="productGrid"
                          hgap="15" vgap="15"
                          prefWrapLength="750">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>


    <right>
        <VBox spacing="10" style="-fx-background-color: #f5f5f5;">
            <children>
                <Label text="Cart"
                       style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <ListView fx:id="cartList" prefWidth="200" prefHeight="300"/>
                <Label text="Total:"/>
                <Label fx:id="totalLabel"
                       style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #ff4b32;"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </right>

</BorderPane>

